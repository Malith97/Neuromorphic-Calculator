<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_accent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <soup.neumorphism.NeumorphTextView
        android:id="@+id/textview"
        style="@style/Widget.Neumorph.TextView"
        android:layout_marginLeft="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_columnWeight="1"
        android:layout_rowWeight="0.5"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="center|start"
        android:textSize="35sp"
        android:maxLength="23"/>

    <TextView
        android:id="@+id/tvInput"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15sp"
        android:lines="2"
        android:textColor="@color/background"
        android:fontFamily="@font/g_light"
        android:maxLength="17"
        android:layout_columnWeight="1"
        android:layout_rowWeight="0.75"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:gravity="end"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/tvOutput"
        android:layout_gravity="center_vertical"
        android:textColor="@color/background"
        android:layout_marginRight="15sp"
        android:fontFamily="@font/medium"
        android:maxLength="14"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:gravity="end"
        android:textSize="40dp"/>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btnClear"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="3"
        android:layout_column="0"
        app:neumorph_shapeType="basin"
        android:drawablePadding="8dp"
        android:fontFamily="@font/bold"
        android:text="C"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@animator/button_state_list_anim_neumorph"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph.Button"
        app:neumorph_lightSource="leftTop"
        app:neumorph_inset="7dp"/>


    <soup.neumorphism.NeumorphButton
        android:id="@+id/btnBackspace"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="3"
        android:layout_column="1"
        app:neumorph_shapeType="basin"
        android:drawablePadding="8dp"
        android:text="âŒ«"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@animator/button_state_list_anim_neumorph"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph.Button"
        app:neumorph_lightSource="leftTop"
        app:neumorph_inset="7dp"/>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btnPercent"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="3"
        android:layout_column="2"
        app:neumorph_shapeType="basin"
        android:drawablePadding="8dp"
        android:text="%"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@animator/button_state_list_anim_neumorph"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph.Button"
        app:neumorph_lightSource="leftTop"
        app:neumorph_inset="7dp"/>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btnDivision"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="3"
        android:layout_column="3"
        app:neumorph_shapeType="basin"
        android:drawablePadding="8dp"
        android:text="/"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@animator/button_state_list_anim_neumorph"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph.Button"
        app:neumorph_lightSource="leftTop"
        app:neumorph_inset="7dp"/>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn7"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:neumorph_shapeType="flat"
        android:drawablePadding="8dp"
        android:text="7"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@animator/button_state_list_anim_neumorph"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph.Button"
        app:neumorph_inset="7dp"/>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn8"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="4"
        android:layout_column="1"
        app:neumorph_shapeType="flat"
        android:drawablePadding="8dp"
        android:text="8"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@animator/button_state_list_anim_neumorph"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph.Button"
        app:neumorph_inset="7dp"/>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn9"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="4"
        android:layout_column="2"
        app:neumorph_shapeType="flat"
        android:drawablePadding="8dp"
        android:text="9"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@animator/button_state_list_anim_neumorph"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph.Button"
        app:neumorph_inset="7dp"/>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btnMultiply"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="4"
        android:layout_column="3"
        app:neumorph_shapeType="basin"
        android:drawablePadding="8dp"
        android:text="X"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@animator/button_state_list_anim_neumorph"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph.Button"
        app:neumorph_inset="7dp"/>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn4"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="5"
        android:layout_column="0"
        app:neumorph_shapeType="flat"
        android:drawablePadding="8dp"
        android:text="4"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@animator/button_state_list_anim_neumorph"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph.Button"
        app:neumorph_inset="7dp"/>

    <soup.neumorphism.NeumorphButton
